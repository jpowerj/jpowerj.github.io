---
import { cn } from '@/utils/class-merge'

const { as: Tag = 'div', class: className, href, heading, subheading, date } = Astro.props
---

<Tag
  class={cn(
    'not-prose block relative rounded-2xl border bg-muted px-5 py-3',
    href && 'group/link transition-all hover:border-foreground/25 hover:shadow-sm',
    className
  )}
  href={href}
  target="_blank"
>
  <div class='flex flex-col gap-y-1.5'>
    <div class='flex flex-col gap-y-0.5'>
      <div class='flex justify-between'>
        <h2 class='text-lg font-medium'>{heading}</h2>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='16'
          height='16'
          viewBox='0 0 24 24'
          fill='none'
          stroke-width='2.5'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='preview-redirect my-1 stroke-muted-foreground group-hover/link:stroke-primary'
          ><line
            x1='5'
            y1='12'
            x2='19'
            y2='12'
            class='translate-x-4 scale-x-0 transition-all duration-300 ease-in-out group-hover/link:translate-x-1 group-hover/link:scale-x-100'
          ></line><polyline
            points='12 5 19 12 12 19'
            class='translate-x-0 transition-all duration-300 ease-in-out group-hover/link:translate-x-1'
          ></polyline></svg
        >
      </div>
      <p class='text-muted-foreground'>{subheading}</p>
      <p class='text-muted-foreground'>{date}</p>
    </div>
    <slot />
  </div>
</Tag>
